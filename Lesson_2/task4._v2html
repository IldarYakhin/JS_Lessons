<body>
    <script>
        'use strict';

        function alerting (num) {
            if (num < 16) {
                alert(num) 
                
                alerting(++num);
                
            } else return

        }

        let userInput = +prompt('Input number from 0 to 15')

        alerting(userInput)

    </script>
